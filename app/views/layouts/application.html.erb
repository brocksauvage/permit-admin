<!DOCTYPE html>
<html>
  <head>
    <title>Permit</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="grid">
      <header class="flex justify-between x-bg-blue h-16">
        <%= image_tag('logo.png', class: 'h-full') %>
        <% if current_user.present? %>
          <nav role="navigation">
            <ul class="Navigation">
              <li class="Navigation-item Dropdown" aria-haspopup="true" aria-expanded="false">
                <div class="Avatar"><div class="Avatar-image"></div></div>
                <ul class="Dropdown-list">
                  <li class="Dropdown-listItem"><a href="/logout">Logout</a></li>
                  <li class="Dropdown-listItem"><%= link_to 'Team', team_path(team_id: current_user.team.id) %>
                </ul>
              </li>
            </ul>
          </nav>
        <% end %>
      </header>

      <% if current_user.present? %>
        <aside class="Sidebar">
          <div class="Dropdown x-bg-blue h-8">
            <h3>Dashboard</h3>
            <ul class="Dropdown-list">
              <li class="Dropdown-listItem"><%= link_to "Permits", permits_path(sort_by: 'created_at') %></li>
              <li class="Dropdown-listItem"><%= link_to "Something Else", permits_path(sort_by: 'name') %></li>
              <li class="Dropdown-listItem"><%= link_to "Alerts", alerts_path %></li>
            </ul>
          </div>
        </aside>
      <% end %>

      <article class="pr-2">
        <% if flash.present? %>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        <% end %>

        <div class="Main">
          <%= yield %>
        </div>
      </article>

      <footer class="bg-white">
        Footer
      </footer>
    </div>
  </body>
</html>
